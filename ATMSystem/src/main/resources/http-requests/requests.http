# Lấy tất cả tài khoản
GET http://localhost:8080/api/accounts

###

# Lấy thông tin tài khoản theo số tài khoản
GET http://localhost:8080/api/accounts/444444444444

###

# Kiểm tra số dư
GET http://localhost:8080/api/accounts/444444444444/balance

###

# Đăng ký tài khoản mới
POST http://localhost:8080/api/accounts/register
Content-Type: application/json

{
  "accountNumber": "123456",
  "pin": "1234",
  "email": "user@example.com",
  "phoneNumber": "0123456789"
}

###

# Đăng nhập
POST http://localhost:8080/api/accounts/login
Content-Type: application/json

{
  "accountNumber": "444444444444",
  "pin": "1234"
}

###

# Cập nhật thông tin tài khoản
PUT http://localhost:8080/api/accounts/update
Content-Type: application/json

{
  "accountNumber": "444444444444",
  "email": "newuser@example.com",
  "phoneNumber": "0987654321"
}

###

# Rút tiền bằng PIN
POST http://localhost:8080/api/transactions/withdraw
Content-Type: application/json

{
  "accountNumber": "444444444444",
  "pin": "1234",
  "amount": 100.0
}

###

# Rút tiền bằng OTP
POST http://localhost:8080/api/transactions/withdraw/otp
Content-Type: application/json

{
  "accountNumber": "444444444444",
  "phoneNumber": "0123456789",
  "amount": 100.0,
  "otp": "123456"
}

###

# Lấy lịch sử giao dịch
GET http://localhost:8080/api/transactions/444444444444
